{% extends 'base.html.twig' %}

{% block title%}Productos{% endblock %}

{% block body %}
    
<div class="row">
        <div class="col bg-white text-center">
          <h2 id="titulo">Todos nuestros productos</h2>
          <div class="contenedorProductos ">
            {% for product in products %}
            <div class="producto">
                <img src="img/{{ product.photo }}" class="img-fluid" alt="smartphone 1">
                <h3>{{ product.name }}</h3>
                <p>
                  <strong>-Marca:</strong> {{ product.brand }}<br>
                  <strong>-Precio:</strong> {{ product.price }}â‚¬<br>
                </p>
                <div class="btn-group " id="grupo">
                  <button class="btn btn-primary py-2 px-3 open-info-product" data-id="{{product.id}}"><i class="bi bi-eye"></i></button>
                  <button class="btn btn-primary py-2 px-3 open-cart-product" data-id="{{product.id}}"><i class="bi bi-cart"></i></button> 
                </div>
            </div>
            {% endfor %}
          </div>

        </div>
      </div>
{% endblock %}